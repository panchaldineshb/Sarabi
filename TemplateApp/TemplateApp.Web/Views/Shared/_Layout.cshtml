<!DOCTYPE html>
<!--
   Referred Example:
    
   http://www.cssplay.co.uk/layouts/flexible-equal-height.html
    
   -->
<!-- ASSIGN OUR ANGULAR MODULE -->
<html lang="en" ng-app="templateApp">
<head>
    <!-- META -->
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Optimize mobile viewport -->
    <title>Node/Angular Todo App</title>
    <!-- SCROLLS -->
    <!-- //netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css -->
    <link rel="stylesheet" href="~/Content/lib/bootstrap.min.css" />
    <!-- load bootstrap -->
    <link rel="stylesheet" href="~/Content/css/styles.css" type="text/css" />
</head>
<!-- SET THE CONTROLLER AND GET ALL TODOS WITH INITIALIZE FUNCTION -->
<body>
    <!-- start layout -->
    <div id="layout">
        @RenderSection("header", required: false) @RenderSection("navbar", required: false)
        @RenderBody() @RenderSection("footer", required: false)
    </div>
    <!-- end layout -->
    <!-- SPELLS -->
    <!-- 
         http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js 
         http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js

        ~/Scripts/jquery-2.1.1.min.js
        ~/Scripts/jquery.validate.min.js
        ~/Scripts/jquery.validate.unobtrusive.min.js

      -->
    <script type="text/javascript" src="~/Content/lib/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- load jquery -->
    <!-- 
         http://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js
         http://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js
         http://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular-cookies.min.js
         http://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular-route.min.js
         http://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular-resource.min.js
      -->
    <script type="text/javascript" src="~/Content/lib/angular.min.js"></script>
    <!-- load angular -->
    <script type="text/javascript" src="~/Content/lib/angular-cookies.min.js"></script>
    <!-- load angular -->
    <script type="text/javascript" src="~/Content/lib/angular-route.min.js"></script>
    <!-- load angular -->
    <script type="text/javascript" src="~/Content/lib/angular-resource.min.js"></script>
    <!-- load angular -->
    <script type="text/javascript" src="~/Content/js/app.js"></script>
    <!-- load angular application-module -->
</body>
</html>
