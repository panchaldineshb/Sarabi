@model templateApp.Models.LoginModel

@{
    ViewBag.Title = "Home Page";
}
@section header {
         <!-- start header -->
         <div id="header" ng-controller="mainController">
            <div class="content">
               <h1>SARABI LLC</h1>
               <p>{{tagLine}}</p>
            </div>
         </div>
         <!-- end header -->
}
@section navbar {
         <!-- Purposely kept empty -->
}
@section footer {
         <!-- startfooter -->
         <div id="footer">
            <div class="content">
               <p>Copyright &copy;2014 Sarabi LLC | <a href="panchaldineshb@gmail.com">Contact Us</a></p>
            </div>
         </div>
         <!-- end footer -->
}

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>LoginModel</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Password)
            <div class="editor-field">
            </div>
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.RememberMe)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.RememberMe)
                @Html.ValidationMessageFor(model => model.RememberMe)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back To Home", "Index", "Home")
    </div>